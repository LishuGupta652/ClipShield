{
  "version": 1,
  "appTitle": "ClipShield",
  "menuBarIcon": {
    "symbolName": "shield.lefthalf.filled",
    "alertSymbolName": "exclamationmark.triangle.fill",
    "accessibilityLabel": "ClipShield"
  },
  "monitoring": {
    "enabled": true,
    "pollIntervalSeconds": 0.75,
    "maxScanLength": 50000,
    "safePaste": {
      "enabled": false,
      "action": "mask",
      "notifyOnAutoRedact": true
    },
    "notifyOnDetect": false
  },
  "detection": {
    "builtins": {
      "pan": { "enabled": true },
      "iban": { "enabled": true },
      "ssn": { "enabled": true },
      "email": { "enabled": true },
      "phone": { "enabled": true }
    },
    "customRules": [
      {
        "id": "aws_access_key",
        "label": "AWS Access Key",
        "pattern": "\\bAKIA[0-9A-Z]{16}\\b",
        "enabled": true,
        "strategy": "tokenize"
      }
    ]
  },
  "redaction": {
    "defaultStrategy": "mask",
    "maskCharacter": "â€¢",
    "preserveLastDigits": 4,
    "perType": {
      "pan": { "strategy": "mask", "preserveLastDigits": 4 },
      "iban": { "strategy": "mask", "preserveLastDigits": 4 },
      "ssn": { "strategy": "mask", "preserveLastDigits": 4 },
      "email": { "strategy": "mask" },
      "phone": { "strategy": "mask", "preserveLastDigits": 2 }
    },
    "tokenization": {
      "prefix": "tok_",
      "hashLength": 10,
      "salt": ""
    }
  },
  "logging": {
    "enabled": false,
    "fileName": "clipshield.log"
  },
  "debug": {
    "showWindow": false
  }
}
